<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_opaque"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:id="@+id/container"
    android:clickable="true"
    android:padding="48dp"
    tools:context="com.luciofm.ifican.app.ui.IfICanFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/android_flag"/>

    <com.luciofm.presentation.droiconit.widget.TextView
        android:id="@+id/text1"
        android:text="androiddevbr.herokuapp.com"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="@dimen/text_title"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_vibrant_rgb"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>
</LinearLayout>
